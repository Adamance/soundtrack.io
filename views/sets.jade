extends layout

block content
  .well.content-well
    
    h1
      if (user)
        a.btn.pull-right(href="/#{user.slug}/playlists/new") Create a Set &raquo;
      | Public Sets

    table.table.tablesorter
      thead
        tr
          th DJ
          th Name
          th Tracks
          th Length
      tbody
        for playlist in sets
          - var person = playlist._creator
          tr(data-updated="#{playlist.updated}")
            td
              a(href="/#{person.slug}") #{person.username}
            td
              a(href="/#{person.slug}/#{playlist.slug}") #{playlist.name}
            td #{playlist._tracks.length}
            td
              if (playlist.length)
                | #{playlist.length.toHHMMSS()}
              else
                | 00:00
