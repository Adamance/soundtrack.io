.message
  abbr.timestamp.pull-right(title="#{message.isoDate}") #{new Date(message.created).getHours()}:#{new Date(message.created).getMinutes()}:#{new Date(message.created).getSeconds()}
  img.user-avatar-small(src="#{message._author.avatar.url}")
  strong #{message._author.username}:
  span  #{message.message}